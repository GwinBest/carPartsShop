<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color">

    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/content_description_back_button"
        android:src="@drawable/ic_back"
        android:background="@android:color/transparent"
        app:layout_constraintStart_toStartOf="@id/guideline1"
        app:layout_constraintTop_toTopOf="@id/guideline3" />

    <TextView
        android:id="@+id/tv_product_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="placeholder"
        android:fontFamily="@font/roboto_bold"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@id/guideline1"
        app:layout_constraintEnd_toEndOf="@id/guideline2"
        app:layout_constraintTop_toBottomOf="@id/btn_back"
        android:layout_marginTop="24dp" />

    <ImageView
        android:id="@+id/iv_product_image"
        android:layout_width="183dp"
        android:layout_height="183dp"
        android:importantForAccessibility="no"
        android:src="@drawable/ic_brake_disk"
        app:layout_constraintTop_toBottomOf="@id/tv_product_name"
        app:layout_constraintStart_toStartOf="@id/guideline1"
        app:layout_constraintEnd_toEndOf="@id/guideline2"
        app:layout_constraintHorizontal_bias="0.5"
        android:layout_marginTop="30dp" />

    <LinearLayout
        android:id="@+id/ll_categories"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/iv_product_image"
        app:layout_constraintStart_toStartOf="@id/guideline1"
        app:layout_constraintEnd_toEndOf="@id/guideline2"
        android:layout_marginTop="23dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_category1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                tools:text="text"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:gravity="start" />

            <TextView
                android:id="@+id/tv_value1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                tools:text="text"
                android:gravity="end"
                android:textColor="@android:color/darker_gray" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_category2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                tools:text="text"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:gravity="start"
                android:layout_marginTop="15dp" />

            <TextView
                android:id="@+id/tv_value2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                tools:text="text"
                android:gravity="end"
                android:textColor="@android:color/darker_gray"
                android:layout_marginTop="15dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_category3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                tools:text="text"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:gravity="start"
                android:layout_marginTop="15dp" />

            <TextView
                android:id="@+id/tv_value3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                tools:text="text"
                android:gravity="end"
                android:textColor="@android:color/darker_gray"
                android:layout_marginTop="15dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_category4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                tools:text="text"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:gravity="start"
                android:layout_marginTop="15dp" />

            <TextView
                android:id="@+id/tv_value4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                tools:text="text"
                android:gravity="end"
                android:textColor="@android:color/darker_gray"
                android:layout_marginTop="15dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_category5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                tools:text="text"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:gravity="start"
                android:layout_marginTop="15dp" />

            <TextView
                android:id="@+id/tv_value5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                tools:text="text"
                android:gravity="end"
                android:textColor="@android:color/darker_gray"
                android:layout_marginTop="15dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_category6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                tools:text="text"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:gravity="start"
                android:layout_marginTop="15dp" />

            <TextView
                android:id="@+id/tv_value6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                tools:text="text"
                android:gravity="end"
                android:textColor="@android:color/darker_gray"
                android:layout_marginTop="15dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_category7"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                tools:text="text"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:gravity="start"
                android:layout_marginTop="15dp" />

            <TextView
                android:id="@+id/tv_value7"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                tools:text="text"
                android:gravity="end"
                android:textColor="@android:color/darker_gray"
                android:layout_marginTop="15dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_category8"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                tools:text="text"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:gravity="start"
                android:layout_marginTop="15dp" />

            <TextView
                android:id="@+id/tv_value8"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                tools:text="text"
                android:gravity="end"
                android:textColor="@android:color/darker_gray"
                android:layout_marginTop="15dp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/ll_categories"
        app:layout_constraintStart_toStartOf="@id/guideline1"
        app:layout_constraintEnd_toEndOf="@id/guideline2">

        <android.widget.Button
            android:id="@+id/btn_add_to_cart"
            android:layout_width="0dp"
            android:layout_height="53dp"
            android:layout_weight="1"
            android:text="@string/add_to_cart"
            android:textStyle="bold"
            android:fontFamily="@font/roboto_medium"
            android:textSize="18sp"
            android:textColor="@color/background_color"
            android:background="@drawable/shape_rounded_elements"
            android:backgroundTint="@color/purple" />

        <ImageButton
            android:id="@+id/btn_favorites"
            android:layout_width="53dp"
            android:layout_height="53dp"
            android:layout_marginStart="5dp"
            android:backgroundTint="@color/purple"
            android:background="@drawable/shape_rounded_elements"
            android:src="@drawable/ic_favorite_border"
            android:scaleType="fitCenter"
            android:padding="8dp"
            app:tint="@color/background_color" />
    </LinearLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.95" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.05" />

</androidx.constraintlayout.widget.ConstraintLayout>
